<!DOCTYPE html>
<html lang="en">
  <html lang="en">
    <head>
      <meta charset="utf-8" />
      <meta
        name="viewport"
        content="width=device-width, initial-scale=1, shrink-to-fit=no"
      />
      <meta name="description" content="" />
      <title>Phoenix Down | Create Cocktail</title>
      <link rel="icon" type="image/png" href="/phoenix_down.png" >

      <link
        rel="canonical"
        href="https://getbootstrap.com/docs/4.5/examples/album/"
      />

      <!-- Bootstrap core CSS -->
      <link
        rel="stylesheet"
        href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
        crossorigin="anonymous"
      />

      <link href="css/album.css" rel="stylesheet" />
    </head>
    <body>
      <%- include('common/header'); -%>

      <div class="container">
        <h1 class="text-center">Create A New Cocktail Recipie üç∑</h1>
        <div class="row justify-content-md-center">
          <div class="col-">
            <form method="POST" action="/create-cocktail">
              <div class="form-group">
                <label for="name">Cocktail Name </label>
                <input
                  type="text"
                  class="form-control"
                  id="Cocktail_Name"
                  name="Cocktail_Name"
                  placeholder="Enter Name"
                />

                <% if (errors['Cocktail_Name']) { %>
                <p style="color: red"><%= errors['Cocktail_Name'].message %></p>
                <% } %>
              </div>

              <div class="form-group">
                <label for="name">Ingredients</label>
                <input
                  type="text"
                  class="form-control"
                  id="Ingredients"
                  name="Ingredients"
                />

                <% if (errors['Ingredients']) { %>
                <p style="color: red"><%= errors['Ingredients'].message %></p>
                <% } %>
              </div>

              <div class="form-group">
                <label for="name">Garnish</label>
                <input
                  type="text"
                  class="form-control"
                  id="Garnish"
                  name="Garnish"
                />

                <% if (errors['Garnish']) { %>
                <p style="color: red"><%= errors['Garnish'].message %></p>
                <% } %>
              </div>

              <div class="form-group">
                <label for="exampleFormControlSelect1">Select Glassware</label>
                <select
                  class="form-control"
                  name="Glassware"
                  id="exampleFormControlSelect1"
                >
                  <% glasswares.forEach( glassware => { %>

                  <option value="<%= glassware.name %>"><%= glassware.name %></option>

                  <% }) %>
                </select>
              </div>






            <div class="form-group">
                <label for="name">Preparation</label>
                <input
                  type="text"
                  class="form-control"
                  id="Preparation"
                  name="Preparation"
                />

                <% if (errors['Preparation']) { %>
                <p style="color: red"><%= errors['Preparation'].message %></p>
                <% } %>
              </div>
            
              <div class="form-group">
                <label for="name">Notes</label>
                <input
                  type="text"
                  class="form-control"
                  id="Notes"
                  name="Notes"
                />

                <% if (errors['Notes']) { %>
                <p style="color: red"><%= errors['Notes'].message %></p>
                <% } %>
              </div>
              
              <div class="form-group">
                <label for="exampleFormControlSelect1">Bartender</label>
                <select
                  class="form-control"
                  name="bartender_id"
                  id="exampleFormControlSelect1"
                  
                >
                  <% bartenders.forEach( bartender => { %>
                    <% if(user.username == bartender.name)  { %>
                      <option value="<%= bartender._id %>"><%= bartender.name %></option>    <%}%> 

                  <% }) %>
                </select>
              </div>

              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>
      </div>
      <%- include('common/footer'); -%>
    </body>
  </html>
</html>
